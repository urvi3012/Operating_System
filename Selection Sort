#include<iostream>
using namespace std;

void swap(int *xp, int *yp)
{
    int temp = *xp;
    *xp = *yp;
    *yp = temp;
}
 void selectionSort(int a[], int n)
{
    int i, j, min;
    for (i = 0; i < n-1; i++)
    {
        min = i;
        for (j = i+1; j < n; j++)
          if (a[j] < a[min])
            min= j;
        swap(&a[min], &a[i]);
    }
}
int main()
{   cout<<endl<<"        SELECTION SORT";
    int n;
    cout<<endl<<"enter size of array ";
    	cin>>n;
    int a[n];
    cout<<endl<<"enter elememts ";
    for(int i=0;i<n;i++)
        cin>>a[i]; 
    selectionSort(a, n);
    cout<<endl<<"sorted elememts";
    for(int i=0;i<n;i++)
    	cout<<" "<<a[i];  
    return 0;
}
